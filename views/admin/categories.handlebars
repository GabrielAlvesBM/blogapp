<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{ name }}</h4>
            <small>{{ slug }}</small>
            <br>
            <small>Data de Criação: {{ date }}</small>
            <br>
            <a href="/admin/categories/edit/{{ _id }}"><button class="btn btn-success mt-4">Editar Categoria</button></a>
            <form action="/admin/categories/delete" method="POST">
                <input type="hidden" name="id" value="{{ _id }}">
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>

{{else}}

    <h4 class="mt-3">Nenhuma categoria registrada</h4>

{{/each}}