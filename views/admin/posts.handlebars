<h2>Lista de Posts</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{ title }}</h4>
            <p>{{ description }}</p>
            <small>{{ category.name }}</small>
            <br>
            <small>Data de Criação: {{ date }}</small>
            <br>
            <a href="/admin/posts/edit/{{ _id }}"><button class="btn btn-success mt-3">Editar Postagem</button></a>
            <a href="/admin/posts/delete/{{ _id }}"><button class="btn btn-danger mt-3">Deletar Postagem</button></a>
        </div>
    </div>

{{else}}

    <h4 class="mt-3">Nenhuma Post registrada</h4>

{{/each}}