{{#if user}}

{{else}}

  <div class="p-5 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">Bem-Vindo ao Blog App</h1>
      <p class="lead">Este é um blog simples, desenvolvido com Node.js + Express + MongoDB.</p>
      <hr class="my-4">
      <div class="d-flex flex-sm-row flex-column gap-2">
        <a href="/users/register"><button class="btn btn-primary btn-lg" type="button">Crie uma conta</button></a>
        <a href="/users/login"><button class="btn btn-primary btn-lg" type="button">Entre na sua conta</button></a>
      </div>
    </div>
  </div>

{{/if}}

<h2>Postagens Recentes:</h2>

{{#each posts}}

  <div class="card mt-4">
    <div class="card-body">
      <h3>{{ title }}</h3>
      <p>{{ description }}</p>
      <a href="/post/{{ slug }}"><button class="btn btn-success">Leia mais</button></a>
      <hr>
      <small>{{ category.name }}</small>
      <br>
      <small>Data de Publicação: {{ date }}</small>
    </div>
  </div>

{{else}}

  <h5>Nenhuma Postagem</h5>

{{/each}}